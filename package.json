{
  "name": "theme",
  "version": "1.0.1",
  "description": "一套基于 vitepress 的简约 Reco 主题",
  "private": true,
  "scripts": {
    "dev:docs": "pnpm -r --filter=docs dev",
    "build:docs": "pnpm run build:theme && pnpm -r --filter=docs build",
    "preview:docs": "pnpm -r --filter=docs preview",
    "build:theme": "pnpm -r --filter=@talexjs/theme build",
    "test:run": "echo 1",
    "publish": "changeset && changeset version && changeset publish",
    "prepare": "husky install",
    "commit": "cz"
  },
  "keywords": [],
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vitepress": "^1.0.0-alpha.65",
    "vue": "^3.2.47"
  },
  "lint-staged": {
    "*.{js,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talexjs/theme.git"
  },
  "author": "fengwang",
  "bugs": {
    "url": "https://github.com/talexjs/theme/issues"
  },
  "homepage": "https://github.com/talexjs/theme#readme",
  "license": "MIT"
}
